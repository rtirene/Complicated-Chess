<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileapp.polimi.maprojectg4.controller.MainActivity"
    android:background="@color/colorPrimary">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        app:fabSize="mini"
        android:src="@drawable/start_sound"
        android:id="@+id/sound"
        android:onClick="soundOnClick"
        android:background="@color/board1"
        app:backgroundTint="@color/board1"
        android:layout_margin="16dp"
        app:elevation="9dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/complexchesslogo"
            android:id="@+id/imageView" />

        <Button
            android:text="@string/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/playButton"
            android:fontFamily="sans-serif-medium"
            android:onClick="Play"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button

            android:text="@string/replay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/replayButton"
            android:fontFamily="sans-serif-medium"
            android:onClick="Replay"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="26dp"
            android:layout_alignParentStart="true" />

        <Button
            android:text="@string/rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rulesButton"
            android:fontFamily="sans-serif-medium"
            android:onClick="Rules"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="27dp"
            android:layout_alignParentStart="true" />
    </LinearLayout>

</RelativeLayout>
